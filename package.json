{
  "name": "tape",
  "version": "0.0.1",
  "scripts": {
    "prepare-cheerio": " browserify packages/html-plugin/cheerio.js -o packages/html-plugin/cheerio-bundle.js -t [ babelify ] -s cheerio",
    "dev": "npm run prepare-cheerio && npx rollup -c rollup.config.js  -w",
    "build": "npm run prepare-cheerio && npx rollup -c rollup.config.js",
    "test": "npm run prepare-cheerio && jest"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/eslint-parser": "^7.12.1",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-proposal-private-methods": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@rollup/plugin-babel": "^5.2.1",
    "@rollup/plugin-commonjs": "^16.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.1",
    "babelify": "^10.0.0",
    "browserify": "^17.0.0",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "husky": "^4.3.0",
    "jest": "^26.6.1",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.0",
    "prettier": "^2.1.2",
    "rollup": "^2.32.1",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-terser": "^7.0.2"
  },
  "eslintConfig": {
    "parser": "@babel/eslint-parser",
    "parserOptions": {
      "requireConfigFile": false
    },
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "extends": [
      "prettier"
    ]
  },
  "lint-staged": {
    "*.(js|json)": [
      "prettier --write"
    ],
    "*.js": [
      "eslint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  }
}
