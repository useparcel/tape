{
  "name": "root",
  "private": true,
  "scripts": {
    "clean": "rm **/bundle.js* && rm -rf **/node_modules",
    "bootstrap": "npm install && npx lerna bootstrap",
    "dev": "npx webpack --mode development --watch",
    "build": "npx webpack --mode production",
    "test": "jest",
    "playground": "npx parcel playground/index.html -d playground/dist/",
    "release": "npm run test && lerna publish"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/eslint-parser": "^7.12.1",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-proposal-private-methods": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.1",
    "babel-loader": "^8.1.0",
    "buffer": "^5.7.0",
    "crypto-browserify": "^3.12.0",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "husky": "^4.3.0",
    "jest": "^26.6.1",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.0",
    "parcel-bundler": "^1.12.4",
    "path-browserify": "^1.0.1",
    "prettier": "^2.1.2",
    "process": "^0.11.10",
    "source-map-support": "^0.5.19",
    "stream-browserify": "^3.0.0",
    "string-replace-loader": "^2.3.0",
    "url": "^0.11.0",
    "util": "^0.12.3",
    "webpack": "^5.3.2",
    "webpack-cli": "^4.1.0"
  },
  "eslintConfig": {
    "parser": "@babel/eslint-parser",
    "parserOptions": {
      "requireConfigFile": false
    },
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "extends": [
      "prettier"
    ]
  },
  "lint-staged": {
    "*.(js|json)": [
      "prettier --write"
    ],
    "*.js": [
      "eslint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  }
}
